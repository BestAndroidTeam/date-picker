<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout"
    >

  <!-- Main Header -->
  <TextView
      android:id="@+id/current_year"
      style="@style/DatePicker.HeaderYear"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintWidth_percent="@dimen/month_sidebar_width_percent"
      tools:background="#8E24AA"
      tools:text="1995"
      />
  <TextView
      android:id="@+id/current_date"
      style="@style/DatePicker.HeaderDate"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/current_year"
      app:layout_constraintWidth_percent="@dimen/month_sidebar_width_percent"
      tools:background="#8E24AA"
      tools:text="Fri, Jul 28"
      />

  <!-- Current Month Header -->
  <com.afollestad.date.view.ChevronImageView
      android:id="@+id/left_chevron"
      style="@style/DatePicker.Chevron.Start"
      app:layout_constraintStart_toEndOf="@id/current_year"
      app:layout_constraintStart_toStartOf="@null"
      />
  <TextView
      android:id="@+id/current_month"
      style="@style/DatePicker.CurrentMonth"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="July 2019"
      />
  <com.afollestad.date.view.ChevronImageView
      android:id="@+id/right_chevron"
      style="@style/DatePicker.Chevron.End"
      />

  <!-- Days of month grid -->
  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/day_list"
      style="@style/DayOfMonthList"
      app:layout_constraintStart_toEndOf="@+id/current_year"
      app:layout_constraintStart_toStartOf="@null"
      />

  <!-- Months and years lists -->
  <View
      android:id="@+id/year_month_list_divider"
      style="@style/Divider"
      app:layout_constraintStart_toEndOf="@+id/current_year"
      app:layout_constraintStart_toStartOf="@null"
      />
  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/year_list"
      style="@style/YearOrMonthList"
      app:layout_constraintStart_toEndOf="@+id/current_year"
      app:layout_constraintStart_toStartOf="@null"
      />
  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/month_list"
      style="@style/YearOrMonthList"
      app:layout_constraintStart_toEndOf="@+id/current_year"
      app:layout_constraintStart_toStartOf="@null"
      />

</merge>