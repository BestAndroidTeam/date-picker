<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout"
    >

  <!-- Main Header -->
  <TextView
      android:id="@+id/current_year"
      style="@style/DatePicker.HeaderYear"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintWidth_percent="@dimen/month_sidebar_width_percent"
      tools:background="#8E24AA"
      tools:text="1995"
      />
  <TextView
      android:id="@+id/current_date"
      style="@style/DatePicker.HeaderDate"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/current_year"
      app:layout_constraintWidth_percent="@dimen/month_sidebar_width_percent"
      tools:background="#8E24AA"
      tools:text="Fri, Jul 28"
      />

  <androidx.core.widget.NestedScrollView
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@id/current_date"
      >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

      <!-- Current Month Header -->
      <com.afollestad.date.view.SquareImageView
          android:id="@+id/left_chevron"
          style="@style/DatePicker.Chevron.Start"
          app:layout_constraintTop_toTopOf="parent"
          tools:ignore="MissingConstraints"
          />
      <TextView
          android:id="@+id/current_month"
          style="@style/DatePicker.CurrentMonth"
          app:layout_constraintEnd_toStartOf="@+id/right_chevron"
          app:layout_constraintHorizontal_chainStyle="packed"
          app:layout_constraintStart_toEndOf="@+id/left_chevron"
          app:layout_constraintTop_toTopOf="parent"
          tools:text="July 2019"
          />
      <com.afollestad.date.view.SquareImageView
          android:id="@+id/right_chevron"
          style="@style/DatePicker.Chevron.End"
          app:layout_constraintTop_toTopOf="parent"
          tools:ignore="MissingConstraints"
          />

      <include layout="@layout/include_weekday_headers"/>
      <include layout="@layout/include_days_of_month"/>

      <View
          android:id="@+id/year_month_list_divider"
          style="@style/Divider"
          tools:ignore="MissingConstraints"
          />

      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/year_list"
          style="@style/YearOrMonthList"
          tools:ignore="MissingConstraints"
          />
      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/month_list"
          style="@style/YearOrMonthList"
          tools:ignore="MissingConstraints"
          />

    </androidx.constraintlayout.widget.ConstraintLayout>
  </androidx.core.widget.NestedScrollView>

</merge>
