<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="Divider">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/divider_height</item>
    <item name="android:background">?android:listDivider</item>

    <item name="layout_constraintEnd_toEndOf">parent</item>
    <item name="layout_constraintStart_toEndOf">parent</item>
    <item name="layout_constraintTop_toBottomOf">@+id/current_month</item>
  </style>

  <style name="DatePicker" />

  <style name="DatePicker.CurrentMonth">
    <item name="android:textColor">?android:textColorPrimary</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">@dimen/current_month_header_height</item>
    <item name="android:layout_marginTop">1dp</item>
    <item name="android:background">?selectableItemBackground</item>
    <item name="android:paddingLeft">@dimen/current_month_header_padding_sides</item>
    <item name="android:paddingRight">@dimen/current_month_header_padding_sides</item>

    <item name="layout_constraintEnd_toStartOf">@+id/right_chevron</item>
    <item name="layout_constraintHorizontal_chainStyle">packed</item>
    <item name="layout_constraintStart_toEndOf">@+id/left_chevron</item>
  </style>

  <style name="DatePicker.Chevron">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">@dimen/current_month_header_height</item>
    <item name="android:scaleType">center</item>
    <item name="android:layout_marginTop">1dp</item>

    <item name="layout_constraintBottom_toBottomOf">@+id/current_month</item>
    <item name="layout_constraintTop_toTopOf">@+id/current_month</item>
  </style>

  <style name="DatePicker.Chevron.Start" parent="DatePicker.Chevron">
    <item name="android:src">@drawable/ic_chevron_left</item>
    <item name="android:contentDescription">@string/previous_month</item>

    <item name="layout_constraintStart_toStartOf">parent</item>
  </style>

  <style name="DatePicker.Chevron.End" parent="DatePicker.Chevron">
    <item name="android:src">@drawable/ic_chevron_right</item>
    <item name="android:contentDescription">@string/next_month</item>

    <item name="layout_constraintEnd_toEndOf">parent</item>
  </style>

  <style name="DatePicker.HeaderYear">
    <item name="android:paddingTop">@dimen/header_main_padding_vertical_top</item>
    <item name="android:paddingBottom">@dimen/header_main_padding_vertical_bottom</item>
    <item name="android:paddingLeft">@dimen/header_main_padding_horizontal</item>
    <item name="android:paddingRight">@dimen/header_main_padding_horizontal</item>
    <item name="android:textSize">@dimen/header_main_text_size_year</item>
    <item name="android:textColor">@color/headers_text_color</item>
    <item name="android:maxLines">1</item>
  </style>

  <style name="DatePicker.HeaderDate">
    <item name="android:paddingBottom">@dimen/header_main_padding_vertical_top</item>
    <item name="android:paddingLeft">@dimen/header_main_padding_horizontal</item>
    <item name="android:paddingRight">@dimen/header_main_padding_horizontal</item>
    <item name="android:textSize">@dimen/header_main_text_size_date</item>
    <item name="android:textColor">@color/headers_text_color</item>
    <item name="android:maxLines">2</item>
  </style>

  <style name="DayOfMonthList">
    <item name="android:scrollbars">vertical</item>
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:clipToPadding">false</item>

    <item name="layout_constraintStart_toStartOf">parent</item>
    <item name="layout_constraintEnd_toEndOf">parent</item>
    <item name="layout_constraintTop_toBottomOf">@+id/current_month</item>
    <item name="layout_constraintBottom_toBottomOf">parent</item>
  </style>

  <style name="DayOfMonthList.Item">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:minHeight">@dimen/week_day_row_height</item>
    <item name="android:textSize">@dimen/week_day_row_column_text_size</item>
  </style>

  <style name="YearOrMonthList">
    <item name="android:scrollbars">vertical</item>
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">0dp</item>
    <item name="android:visibility">invisible</item>

    <item name="layout_constraintStart_toStartOf">parent</item>
    <item name="layout_constraintEnd_toEndOf">parent</item>
    <item name="layout_constraintBottom_toBottomOf">@id/day_list</item>
    <item name="layout_constraintTop_toBottomOf">@+id/year_month_list_divider</item>
  </style>

  <style name="YearOrMonthList.Row">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/year_list_row_height</item>
    <item name="android:gravity">center</item>
    <item name="android:background">?selectableItemBackground</item>
    <item name="android:textSize">@dimen/year_month_list_text_size</item>
    <item name="android:padding">@dimen/year_list_row_padding</item>
    <item name="android:visibility">visible</item>
    <item name="android:clipToPadding">false</item>
  </style>

</resources>