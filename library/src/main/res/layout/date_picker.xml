<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout"
    >

  <!-- Main Header -->
  <TextView
      android:id="@+id/current_year"
      style="@style/DatePicker.HeaderYear"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:background="#8E24AA"
      tools:text="1995"
      />
  <TextView
      android:id="@+id/current_date"
      style="@style/DatePicker.HeaderDate"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/current_year"
      tools:background="#8E24AA"
      tools:text="Fri, Jul 28"
      />

  <!-- Current Month Header -->
  <com.afollestad.date.view.SquareImageView
      android:id="@+id/left_chevron"
      style="@style/DatePicker.Chevron"
      android:layout_marginStart="@dimen/chevron_side_margins"
      android:layout_marginLeft="@dimen/chevron_side_margins"
      android:contentDescription="@string/previous_month"
      android:src="@drawable/ic_chevron_left"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/current_date"
      />
  <TextView
      android:id="@+id/current_month"
      style="@style/DatePicker.CurrentMonth"
      app:layout_constraintEnd_toStartOf="@+id/right_chevron"
      app:layout_constraintHorizontal_chainStyle="packed"
      app:layout_constraintStart_toEndOf="@+id/left_chevron"
      app:layout_constraintTop_toBottomOf="@+id/current_date"
      tools:text="July 2019"
      />
  <com.afollestad.date.view.SquareImageView
      android:id="@+id/right_chevron"
      style="@style/DatePicker.Chevron"
      android:layout_marginEnd="@dimen/chevron_side_margins"
      android:layout_marginRight="@dimen/chevron_side_margins"
      android:contentDescription="@string/next_month"
      android:src="@drawable/ic_chevron_right"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/current_date"
      />

  <include layout="@layout/include_weekday_headers"/>
  <include layout="@layout/include_days_of_month"/>

  <!-- Year list for year mode-->
  <View
      android:id="@+id/year_list_divider"
      android:layout_width="match_parent"
      android:layout_height="@dimen/divider_height"
      android:background="?android:listDivider"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/current_month"
      />

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/year_list"
      style="@style/YearList"
      app:layout_constraintBottom_toBottomOf="@id/row_6_col_1"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/year_list_divider"
      />

</merge>
